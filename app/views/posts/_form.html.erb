<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="column">
    
    <div class="column">

      <div class="input-field col s6">
      <i class="material-icons prefix">format_italic</i>
      <%= form.text_field :title, placeholder: 'Title' %>
      </div>
        
      <div class="input-field col s6">
          <i class="material-icons prefix">format_color_text</i>
          <%= form.text_field :description, placeholder: 'Description' %>
      </div>
        
      <div class="input-field col s6">
          <i class="material-icons prefix">mode_edit</i>
          <%= form.text_area :content, placeholder: 'Content', class: 'materialize-textarea' %>
      </div>
      </div>
       <button class="btn waves-effect waves-light" type="submit" name="action">Post
         <i class="material-icons right">send</i>
       </button>

      
  </div>
<% end %>
